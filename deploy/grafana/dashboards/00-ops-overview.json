{
  "dashboard": {
    "title": "Ops Overview",
    "tags": ["ops", "overview", "ai-shield"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 2,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Service Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"node-backend|python-backend|mcp-server|gateway|control-plane\"}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Request Rate (Backend)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "refId": "A",
            "legendFormat": "{{job}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 3,
        "title": "Error Rate (Backend)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "refId": "A",
            "legendFormat": "{{job}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 4,
        "title": "P95 Latency (Backend)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "{{job}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 5,
        "title": "AI Shield - Request Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(litellm_requests_total[5m])",
            "refId": "A",
            "legendFormat": "Requests/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 6,
        "title": "AI Shield - Error Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(litellm_errors_total[5m])",
            "refId": "A",
            "legendFormat": "Errors/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 7,
        "title": "AI Shield - Injection Blocks",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(ai_shield_injection_blocks_total[5m])",
            "refId": "A",
            "legendFormat": "Blocks/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 8,
        "title": "AI Shield - PII Detections",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(ai_shield_pii_detections_total[5m])",
            "refId": "A",
            "legendFormat": "Detections/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 9,
        "title": "Database Connections",
        "type": "timeseries",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname!~\"template.*|postgres\"}",
            "refId": "A",
            "legendFormat": "{{datname}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 10,
        "title": "Redis Memory Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "redis_memory_used_bytes",
            "refId": "A",
            "legendFormat": "{{instance}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 36},
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      }
    ],
    "links": [
      {
        "title": "Jaeger",
        "url": "/jaeger/",
        "type": "link",
        "icon": "external link"
      },
      {
        "title": "Langfuse",
        "url": "/langfuse/",
        "type": "link",
        "icon": "external link"
      },
      {
        "title": "Prometheus",
        "url": "/prometheus/",
        "type": "link",
        "icon": "external link"
      },
      {
        "title": "AI Shield Dashboard",
        "url": "/d/ai-shield-overview",
        "type": "dashboards",
        "icon": "dashboard"
      }
    ]
  }
}
